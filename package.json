{
  "name": "motta-carrozzeria-gestionale",
  "version": "1.0.0",
  "description": "Sistema gestionale completo per la carrozzeria Motta",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "npm run install-client && npm run build-client",
    "install-client": "cd client && npm install",
    "build-client": "cd client && npm run build",
    "postinstall": "npm run install-client && npm run build-client",
    "install-all": "npm install && cd client && npm install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^2.7.0",
    "socket.io": "^4.7.2",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "carrozzeria",
    "gestionale",
    "automotive",
    "timer",
    "dashboard"
  ],
  "author": "Motta Carrozzeria",
  "license": "MIT"
}
